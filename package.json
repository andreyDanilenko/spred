{
  "name": "spred",
  "description": "Reactive programming library",
  "homepage": "https://github.com/art-bazhin/spred",
  "repository": "git@github.com/art-bazhin/spred.git",
  "bugs": "https://github.com/art-bazhin/spred/issues",
  "version": "0.3.1",
  "main": "dist/spred.js",
  "types": "dist/spred.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.0.6",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rollup": "^2.53.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.0",
    "size-limit": "^5.0.5",
    "standard-version": "^9.3.0",
    "tslib": "^2.3.0",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "commit": "git-cz",
    "size": "size-limit",
    "release": "standard-version",
    "bench": "npx http-server"
  },
  "files": [
    "dist"
  ],
  "size-limit": [
    {
      "path": "dist/spred.min.js"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
