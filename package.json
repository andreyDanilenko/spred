{
  "name": "@spred/core",
  "description": "Reactive programming library",
  "homepage": "https://github.com/art-bazhin/spred",
  "repository": "git@github.com/art-bazhin/spred.git",
  "bugs": "https://github.com/art-bazhin/spred/issues",
  "version": "0.36.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "reactivity",
    "reactive",
    "state management",
    "state manager"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@preact/signals-core": "^1.5.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "rollup-plugin-ts": "^3.4.5",
    "size-limit": "^11.0.1",
    "standard-version": "^9.5.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "commit": "git-cz",
    "size": "size-limit",
    "release": "standard-version",
    "docs": "npx typedoc src/index.ts",
    "bench": "npx http-server"
  },
  "files": [
    "dist"
  ],
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
